/* Low / critical stock indicators */
.low-stock {
  background: linear-gradient(135deg, rgba(251, 146, 60, 0.08) 0%, rgba(251, 191, 36, 0.05) 100%);
  border-left: 4px solid #f97316;
  transition: all 0.2s ease;
}

.low-stock td {
  border-left: 4px solid #f97316;
  color: #7c2d12;
}

.low-stock .qty {
  color: #b45309;
  font-weight: 600;
}

.low-stock:hover {
  background: linear-gradient(135deg, rgba(251, 146, 60, 0.12) 0%, rgba(251, 191, 36, 0.08) 100%);
}

.critical-stock {
  background: linear-gradient(135deg, rgba(239, 68, 68, 0.12) 0%, rgba(252, 165, 165, 0.05) 100%);
  border-left: 4px solid #dc2626;
  animation: pulse-critical 2s ease-in-out infinite;
}

.critical-stock td {
  border-left: 4px solid #dc2626;
  color: #7f1d1d;
}

.critical-stock .qty {
  color: #991b1b;
  font-weight: 700;
}

.critical-stock:hover {
  background: linear-gradient(135deg, rgba(239, 68, 68, 0.18) 0%, rgba(252, 165, 165, 0.1) 100%);
}

@keyframes pulse-critical {

  0%,
  100% {
    box-shadow: inset 0 0 0 0 rgba(220, 38, 38, 0);
  }

  50% {
    box-shadow: inset 0 0 0 2px rgba(220, 38, 38, 0.1);
  }
}

/* Status dot for stock rows */
.status-dot {
  display: inline-block;
  width: 10px;
  height: 10px;
  border-radius: 50%;
  margin-right: 8px;
  vertical-align: middle;
  box-shadow: 0 0 0 2px rgba(255, 255, 255, 0.8);
  transition: all 0.2s ease;
}

.status-dot.low {
  background: #f97316;
  box-shadow: 0 0 0 2px rgba(255, 255, 255, 0.8), 0 0 8px rgba(249, 115, 22, 0.4);
}

.status-dot.critical {
  background: #dc2626;
  box-shadow: 0 0 0 2px rgba(255, 255, 255, 0.8), 0 0 8px rgba(220, 38, 38, 0.5);
  animation: pulse-status 2s ease-in-out infinite;
}

@keyframes pulse-status {

  0%,
  100% {
    transform: scale(1);
    opacity: 1;
  }

  50% {
    transform: scale(1.15);
    opacity: 0.8;
  }
}

/* DecisionCenter row indicators */
.decision-row {
  transition: background 0.12s ease, border-left-color 0.12s ease
}

.decision-row.ok td {
  border-left: 4px solid rgba(16, 185, 129, 0.06);
}

.decision-dot {
