/* Cards */
.card {
  background: #fff;
  padding: 16px;
  border-radius: 8px;
  box-shadow: 0 1px 2px rgba(16, 24, 40, 0.04);
  border: 1px solid #f3f4f6;
}

.card .title {
  color: #1b1c1d;
  font-size: 13px;
  font-weight: 500;
}

.card .value {
  font-size: 28px;
  font-weight: 700;
  margin-top: 8px;
  color: #111827;
}

.card .change {
  color: #10b981;
  font-size: 13px;
  margin-top: 6px;
  font-weight: 500;
}

/* Widgets Layout - Dashboard */
.widgets {
  display: grid;
  grid-template-columns: 2fr 1fr;
  gap: 20px;
  margin-top: 24px;
}

@media (max-width: 1024px) {
  .widgets {
    grid-template-columns: 1fr;
  }
}

@media (max-width: 768px) {
