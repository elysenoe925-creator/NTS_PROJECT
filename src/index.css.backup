/* Icon buttons */
.icon-btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 36px;
  height: 36px;
  padding: 0;
  border-radius: 6px;
  cursor: pointer;
  border: none
}

.icon-btn svg {
  width: 18px;
  height: 18px
}

.icon-btn.primary {
  background: #4ade9be8;
  color: #fff
}

.icon-btn.secondary {
  background: #eef2ff;
  color: #111827;
  border: 1px solid #e5e7eb
}

.icon-btn.ghost {
  background: transparent;
  color: #6b7280
}

.icon-btn:focus {
  outline: 2px solid rgba(37, 99, 235, 0.25);
  outline-offset: 2px
}

/* Simple CSS tooltip for icon buttons */
.icon-btn[data-tooltip] {
  position: relative
}

.icon-btn[data-tooltip]::after {
  content: attr(data-tooltip);
  position: absolute;
  bottom: calc(100% + 8px);
  left: 50%;
  transform: translateX(-50%);
  background: rgba(17, 24, 39, 0.95);
  color: #fff;
  padding: 6px 8px;
  border-radius: 6px;
  white-space: nowrap;
  font-size: 12px;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.12s ease, transform 0.12s ease;
  transform-origin: center bottom;
}

.icon-btn[data-tooltip]:hover::after,
.icon-btn[data-tooltip]:focus::after {
  opacity: 1;
  transform: translateX(-50%) translateY(-2px);
}

/* Store segmented switch (Topbar) */
.store-switch {
  position: relative;
  display: inline-block;
  padding: 4px;
  border-radius: 10px;
  background: transparent
}

.store-switch .store-switch-inner {
  display: flex;
  gap: 6px;
  position: relative;
  z-index: 2
}

.store-switch-btn {
  appearance: none;
  -webkit-appearance: none;
  border: none;
  background: transparent;
  padding: 6px 14px;
  border-radius: 8px;
  cursor: pointer;
  font-size: 13px;
  color: #111827
}

.store-switch-btn.active {
  color: #fff
}

.store-switch-pill {
  position: absolute;
  left: 4px;
  top: 4px;
  bottom: 4px;
  width: calc((100% - 8px) / 3);
  background: #2563eb;
  border-radius: 8px;
  box-shadow: 0 6px 16px rgba(37, 99, 235, 0.12);
  transition: transform 220ms cubic-bezier(.2, .9, .2, 1), width 220ms ease
}

.store-switch {
  min-width: 220px
}

.store-switch-btn {
  flex: 1 1 0
}

@media (max-width: 900px) {
  .store-switch {
    min-width: 160px
  }

  .store-switch-btn {
    padding: 6px 8px;
    font-size: 12px
  }
}

/* Editing row highlight */
.editing-row {
  background: linear-gradient(90deg, rgba(37, 99, 235, 0.04), rgba(255, 255, 255, 0));
}

.editing-row td {
  border-left: 4px solid rgba(37, 99, 235, 0.18);
}

.editing-row {
