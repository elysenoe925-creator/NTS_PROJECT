/* === STYLES AMLIORS POUR LES GRAPHIQUES === */

/* Container gnral pour les graphiques */
canvas {
  max-height: 400px;
}

/* Styles pour les chartes */
div[style*="height"]>div[style*="position"] canvas {
  animation: fadeIn 0.5s ease-in-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }

  to {
    opacity: 1;
  }
}

/* Conteneur de graphiques avec effet de profondeur */
.chart-container {
  background: linear-gradient(135deg, #ffffff 0%, #f9fafb 100%);
  border-radius: 12px;
  padding: 20px;
   box-shadow: 0 2px 12px rgba(0, 0, 0, 0.06),
    0 1px 4px rgba(0, 0, 0, 0.03);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  font-family: inter;
  
}

.chart-container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 1px;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.5), transparent);
  pointer-events: none;
}

.chart-container:hover {
  transform: translateY(-4px);
  box-shadow: 0 12px 24px rgba(0, 0, 0, 0.1),
    0 4px 8px rgba(0, 0, 0, 0.05);
}

/* KPI Cards avec meilleur style */

.kpi-card {
  background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
  border-radius: 10px;
  padding: 18px;
  box-shadow: 0 2px 12px rgba(0, 0, 0, 0.06),
    0 1px 4px rgba(0, 0, 0, 0.03);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  display: flex;
  align-items: start;
  height: 150px;
  justify-content: space-between;
  position: relative;
  font-family: inter;
  overflow: hidden;
  
 

}

.kpi-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 1px;
  background: rgba(255, 255, 255, 0.8);
  pointer-events: none;
}

.kpi-card:hover {
  transform: translateY(-4px);
  box-shadow: 0 12px 24px rgba(0, 0, 0, 0.1),
    0 4px 8px rgba(0, 0, 0, 0.05);
}



.kpi-header {
  display: flex;
  flex-direction: column;
  align-items: start;
  justify-content: start;
  gap: 32px;
  margin-bottom: 12px;
  width: 25%;
}

.kpi-icon {
  width: 70px;
  height: 70px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 8px;
  font-weight: 00;
  transition: all 0.3s ease;
 box-shadow: rgba(0, 0, 0, 0.19) 0px 10px 20px, rgba(0, 0, 0, 0.23) 0px 6px 6px;
  
}

.kpi-revenue .kpi-icon {
  color: rgb(250, 250, 250);
  background-color: #10b981;
}

.kpi-sold .kpi-icon {
  color: rgb(250, 250, 250);
  background-color: #f59e0b;
}

.kpi-orders .kpi-icon {
  color: rgb(250, 250, 250);
  background-color: #8b5cf6;
}

.kpi-products .kpi-icon {
  color: rgb(250, 250, 250);
  background-color: #06b6d4;
}

.kpi-quantity .kpi-icon {
  color: rgb(250, 250, 250);
  background-color: #ef4444;
}

.kpi-value-stock .kpi-icon {
  color: rgb(250, 250, 250);
  background-color: #6366f1;
}

.kpi-low-stock .kpi-icon {
  color: rgb(250, 250, 250);
  background-color: #f97316;
}

.kpi-icon svg {
  width: 40px;
  height: 40px;
  stroke-width: 2.5;
}

.kpi-title {
  font-size: 13px;
  font-weight: 500;
  color: #6b7280;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  line-height: 1.2;
  flex: 1;
}

.kpi-value {
  font-size: 25px;
  font-weight: 700;
  color: #202227;
  line-height: 1.2;
  letter-spacing: -0.5px;
  margin-bottom: 4px;
  display: flex;
  flex-direction: column;
  align-items: end;
  justify-content: start;
  gap: 5px;
}

.kpi-unit {
  font-size: 12px;
  color: #6b6b6b;
  font-weight: 500;
}

/* Grilles KPI */
.kpi-grid-sales,
.kpi-grid-stock {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  gap: 16px;
  margin-top: 14px;
}

.kpi-grid-sales .kpi-card,
.kpi-grid-stock .kpi-card {
  flex: 1;
  min-width: 200px;
}

@media (max-width: 1024px) {

  .kpi-grid-sales .kpi-card,
  .kpi-grid-stock .kpi-card {
    flex: 0 1 calc(50% - 8px);
  }
}

@media (max-width: 640px) {

  .kpi-grid-sales .kpi-card,
  .kpi-grid-stock .kpi-card {
    flex: 1 1 100%;
  }

  .kpi-card {
    padding: 16px;
  }

  .kpi-value {
    font-size: 24px;
  }
}

/* Amlioration des lgendes de chart */
.chartjs-legend {
  background: rgba(255, 255, 255, 0.5);
  border-radius: 8px;
  padding: 12px !important;
  margin-top: 8px !important;
}

.chartjs-legend li {
  display: flex;
  align-items: center;
  margin-bottom: 6px;
}

.chartjs-legend li:last-child {
  margin-bottom: 0;
}

.chartjs-legend li label {
  font-size: 12px;
  font-weight: 500;
  color: #475569;
  cursor: pointer;
  transition: color 0.2s ease;
}

.chartjs-legend li label:hover {
  color: #1e293b;
}

/* === FIL D'ARIANE (BREADCRUMB) === */

.breadcrumb-container {
  background: linear-gradient(135deg, #ffffff 0%, #f9fafb 100%);
  padding: 12px 20px;
  border-bottom: 1px solid #e5e7eb;
  margin: 0;
  position: sticky;
  top: 65px;
  left: 125px;
  z-index: 29;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
  transition: top 0.3s ease;
  
}

.breadcrumb-list {
  display: flex;
  align-items: center;
  list-style: none;
  margin: 0;
  padding: 0;
  max-width: 100%;
  overflow-x: auto;
}

.breadcrumb-item {
  display: flex;
  align-items: center;
  justify-content: center;
  
}

.breadcrumb-separator {
  margin: 0 8px;
  color: #cbd5e1;
  flex-shrink: 0;
}

.breadcrumb-link {
  display: flex;
  align-items: center;
  gap: 6px;
  font-size: 18px;
  color: #2563eb;
  text-decoration: none;
  padding: 4px 8px;
  border-radius: 6px;
  transition: all 0.2s ease;
  cursor: pointer;
  white-space: nowrap;
}

.breadcrumb-link:hover {
  background-color: rgba(37, 99, 235, 0.1);
  color: #1d4ed8;
  transform: translateX(1px);
}

.breadcrumb-current {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 6px;
  font-size: 13px;
  font-weight: 600;
  color: #64748b;
  padding: 4px 8px;
  white-space: nowrap;
}

.breadcrumb-current > span{
  font-family: inter;
}

.breadcrumb-icon {
  width: 16px;
  height: 16px;
  flex-shrink: 0;
  color: #444444;
}

@media (max-width: 768px) {
  .breadcrumb-container {
    padding: 10px 16px;
  }

  .breadcrumb-link,
  .breadcrumb-current {
    font-size: 12px;
    padding: 4px 6px;
  }

  .breadcrumb-separator {
    margin: 0 4px;
  }

  .breadcrumb-icon {
    width: 14px;
    height: 14px;
  }
}

/* Modern Charts Design */
.modern-chart-container {
  background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
  border-radius: 16px;
  padding: 20px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05), 0 10px 20px rgba(0, 0, 0, 0.08);
  border: 1px solid rgba(203, 213, 225, 0.4);
  backdrop-filter: blur(4px);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  transform: translateY(-5px);
  
}

.modern-chart-container:hover {
  box-shadow: 0 8px 12px rgba(0, 0, 0, 0.08), 0 14px 28px rgba(0, 0, 0, 0.12);
  border-color: rgba(148, 163, 184, 0.5);
  transform: translateY(-2px);
}

/* Chart Title Styling */
.chart-title {
  font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  font-size: 16px;
  font-weight: 600;
  color: #1e293b;
  margin-bottom: 16px;
  letter-spacing: -0.3px;
}

.chart-subtitle {
  font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  font-size: 12px;
  color: #64748b;
  margin-top: -12px;
  margin-bottom: 16px;
  font-weight: 500;
  letter-spacing: 0.5px;
  text-transform: uppercase;
}

/* Chart Grid Background */
.chart-grid-bg {
  background-image: 
    linear-gradient(0deg, transparent 24%, rgba(155, 165, 175, .05) 25%, rgba(155, 165, 175, .05) 26%, transparent 27%, transparent 74%, rgba(155, 165, 175, .05) 75%, rgba(155, 165, 175, .05) 76%, transparent 77%, transparent),
    linear-gradient(90deg, transparent 24%, rgba(155, 165, 175, .05) 25%, rgba(155, 165, 175, .05) 26%, transparent 27%, transparent 74%, rgba(155, 165, 175, .05) 75%, rgba(155, 165, 175, .05) 76%, transparent 77%, transparent);
  background-size: 50px 50px;
}

/* Tooltip Modern Style */
.chart-tooltip {
  font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  font-size: 12px;
  font-weight: 500;
  background: rgba(15, 23, 42, 0.95) !important;
  border: 1px solid rgba(100, 116, 139, 0.3) !important;
  border-radius: 8px;
  padding: 12px 16px !important;
  box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
  backdrop-filter: blur(10px);
}

/* Legend Modern Style */
.chart-legend {
  font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
}

.chart-legend-item {
  font-size: 12px;
  font-weight: 500;
  color: #475569;
  padding: 8px 12px;
  margin: 4px 0;
  border-radius: 6px;
  transition: all 0.2s ease;
}

.chart-legend-item:hover {
  background: rgba(100, 116, 139, 0.1);
  color: #1e293b;
}

/* Data Point Indicators */
.data-point {
  border-radius: 50%;
  box-shadow: 0 0 8px rgba(0, 0, 0, 0.1);
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
}

.data-point:hover {
  box-shadow: 0 0 16px rgba(0, 0, 0, 0.15);
  transform: scale(1.3);
}
