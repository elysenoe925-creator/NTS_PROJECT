/* Mobile Menu Button (Hamburger) */
.mobile-menu-btn {
  display: none;
  position: fixed;
  top: 100px;
  right: 16px;
  z-index: 50;
  width: 48px;
  height: 48px;
  padding: 8px;
  border: none;
  background: #f3f3f3;
  border-radius: 10px;
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 4px 12px rgba(79, 70, 229, 0.3);
  align-items: center;
  justify-content: center;
  color: #555;
}

.mobile-menu-btn:hover {
  background: #f3f4f6;
  box-shadow: 0 6px 16px rgba(79, 70, 229, 0.4);
  transform: translateY(-2px);
}

.mobile-menu-btn:active {
  transform: translateY(0);
  box-shadow: 0 2px 8px rgba(79, 70, 229, 0.3);
}

.mobile-menu-btn.active {
  background-color: #6d189e;
  color: #fff;

}

/*
.mobile-menu-btn.active:hover {
  background: linear-gradient(135deg, #f87171 0%, #ef4444 100%);
  box-shadow: 0 6px 16px rgba(239, 68, 68, 0.4);
}*/

.hamburger-icon {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 24px;
  height: 24px;
  gap: 4px;
}

.hamburger-line {
  display: block;
  width: 24px;
  height: 2.5px;
  background-color: rgb(44, 44, 44);
  border-radius: 2px;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  transform-origin: center;
}

.mobile-menu-btn:not(.active) .hamburger-line-1 {
  transform: translateY(0);
}

.mobile-menu-btn:not(.active) .hamburger-line-2 {
  opacity: 1;
}

.mobile-menu-btn:not(.active) .hamburger-line-3 {
  transform: translateY(0);
}

.mobile-menu-btn.active .hamburger-line-1 {
  transform: translateY(6.5px) rotate(45deg);
}

.mobile-menu-btn.active .hamburger-line-2 {
  opacity: 0;
}

.mobile-menu-btn.active .hamburger-line-3 {
  transform: translateY(-6.5px) rotate(-45deg);
}

/* Mobile overlay */
.mobile-overlay {
  position: fixed;
  inset: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 30;
  animation: fadeIn 0.3s ease;
  backdrop-filter: blur(2px);
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }

  to {
    opacity: 1;
  }
}

/* Show mobile button on small screens */
@media (max-width: 1024px) {
  .mobile-menu-btn {
    display: flex;
  }
}

/* Sidebar Responsive */
.sidebar-responsive {
  width: 280px;
  height: 100vh;
  padding: 20px;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 40;
  overflow-y: auto;
  transition: width 0.3s cubic-bezier(0.4, 0, 0.2, 1), transform 0.3s ease;
  flex-direction: column;
  display: flex;
  background-color: rgb(255, 255, 255);
  font-family: inter;
}

.sidebar-responsive::-webkit-scrollbar {
  width: 6px;
}


.sidebar-responsive::-webkit-scrollbar-track {
  background: rgba(0, 0, 0, 0.02);
}

.sidebar-responsive::-webkit-scrollbar-thumb {
  background: rgba(0, 0, 0, 0.1);
  border-radius: 3px;
}

.sidebar-responsive::-webkit-scrollbar-thumb:hover {
  background: rgba(0, 0, 0, 0.15);
}

.sidebar-collapsed {
  width: 80px;
  padding: 20px 10px;
}

.sidebar-collapsed .logo {
  display: none;
}

.sidebar-collapsed .nav-label {
  display: none;
}

.sidebar-collapsed .nav a {
  padding: 12px;
  justify-content: center !important;
}

.sidebar-collapsed .nav {
  gap: 4px;
}

.sidebar-closed {
  transform: translateX(-100%);
}

.sidebar-open {
  transform: translateX(0);
}

@media (min-width: 1024px) {
  .app {
    flex-direction: row;
  }

  .sidebar-responsive {
    position: fixed;
    left: 0;
    top: 0;
    height: 100vh;
    transform: translateX(0) !important;
    width: 280px;
  }

  .sidebar-responsive.sidebar-collapsed {
    width: 80px;
  }
}

