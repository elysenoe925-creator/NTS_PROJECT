  padding: 10px;
  text-align: left;
  vertical-align: middle;
  white-space: nowrap;
}

.card th {
  font-size: 12px;
  color: #6b7280
}

.card td {
  font-size: 13px;
  color: #111827
}

.card td>button {
  font-size: 12px
}

