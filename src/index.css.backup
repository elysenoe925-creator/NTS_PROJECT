}

.sidebar-responsive .logo-icon-only {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 44px;
  height: 44px;

  border-radius: 12px;
  border: 1px solid rgba(99, 102, 241, 0.2);
}

.sidebar-responsive .logo-text {
  font-size: 18px;
  font-weight: 800;
  color: #115bd1;
  letter-spacing: -0.5px;
  line-height: 1.2;
}

.sidebar-responsive .logo-subtitle {
  font-size: 12px;
  color: #64748b;
  font-weight: 500;
  letter-spacing: 0.5px;
  text-transform: uppercase;
}

.sidebar-responsive .sidebar-footer {
  margin-top: auto;
  padding-top: 16px;
  border-top: 1px solid #e2e8f0;
}

.sidebar-responsive .user-section {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 12px 14px;
  background: linear-gradient(135deg, rgba(59, 130, 246, 0.05) 0%, rgba(99, 102, 241, 0.05) 100%);
  border-radius: 10px;
  border: 1px solid #e2e8f0;
}

.sidebar-responsive .user-avatar {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 40px;
  height: 40px;
  background: linear-gradient(135deg, rgba(59, 130, 246, 0.15) 0%, rgba(99, 102, 241, 0.1) 100%);
  border-radius: 10px;
  color: #3b82f6;
  flex-shrink: 0;
}

.sidebar-responsive .user-info {
  flex: 1;
  min-width: 0;
}

.sidebar-responsive .user-name {
  font-size: 14px;
  font-weight: 700;
  color: #1e293b;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.sidebar-responsive .user-role {
  font-size: 12px;
  color: #64748b;
  font-weight: 500;
  letter-spacing: 0.3px;
}

.sidebar-responsive .link-icon-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 28px;
  height: 28px;
  background: rgba(255, 255, 255, 0.5);
  border-radius: 8px;
  transition: all 0.2s ease;
}

.sidebar-responsive .nav a:hover .link-icon-wrapper {
  background: rgba(6, 92, 230, 0.15);
}

.sidebar-responsive .nav a.active .link-icon-wrapper {
  background: linear-gradient(135deg, rgba(99, 102, 241, 0.2) 0%, rgba(99, 102, 241, 0.1) 100%);
}

.sidebar-responsive .nav {
  margin-top: 12px;
  display: flex;
  flex-direction: column;
  gap: 8px;
  
}

.sidebar-responsive .nav a {
  display: flex;
  align-items: center;
  gap: 12px;
  color: #424242;
  padding: 12px 14px;
  border-radius: 8px;
  text-decoration: none;
  transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
  font-size: 18px;
  justify-content: center;
  position: relative;
  overflow: hidden;
  border-left: 3px solid transparent;
  background: rgba(255, 255, 255, 0.4);
}

.sidebar-responsive .nav a::before {
  content: '';
  position: absolute;
  inset: 0;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.5) 0%, transparent 100%);
  opacity: 0;
  transition: opacity 0.2s ease;
  pointer-events: none;
}

.sidebar-responsive:not(.sidebar-collapsed) .nav a {
  justify-content: flex-start;
}

.sidebar-responsive .nav a:hover {
  background: linear-gradient(135deg, rgba(59, 130, 246, 0.1) 0%, rgba(99, 102, 241, 0.08) 100%);
  color: #0f1416;
  transform: translateX(4px);
  border-color: #eff0f5;
  box-shadow: 0 2px 8px rgba(59, 130, 246, 0.15);
}

.sidebar-responsive .nav a:hover::before {
  opacity: 1;
}

.sidebar-responsive .nav a.active {
  background: rgb(11, 66, 187);
  color: #f3f3f3;
  font-weight: 700;
  box-shadow: 0 4px 12px rgba(99, 102, 241, 0.2);
}

.sidebar-responsive .nav .link-icon {
  flex-shrink: 0;
  font-size: 18px;
  transition: transform 0.2s ease;
}

.sidebar-responsive .nav a:hover .link-icon {
  transform: scale(1.1);
}

.sidebar-responsive .nav a.active .link-icon {
  filter: brightness(1.2);
}

.sidebar-responsive .nav-label {
  transition: opacity 0.2s ease;
  flex: 1;
}

/* Sidebar Header Styling */
.sidebar-responsive>div:first-child {
  border-bottom: 1px solid rgba(0, 0, 0, 0.08);
  padding-bottom: 16px;
  margin-bottom: 16px;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

/* Sidebar Collapse Button */
.sidebar-responsive button {
  display: flex;
