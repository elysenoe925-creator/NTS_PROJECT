/* Base typography improvements */
@layer base {
  html {
    font-feature-settings: "cv02", "cv03", "cv04", "cv11";
    scroll-behavior: smooth;
  }

  body {
    font-family: 'Inter', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    font-weight: 400;
    font-size: 1rem;
    line-height: 1.6;
    color: #1f2937;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    text-rendering: optimizeLegibility;
  }

  /* Headings hierarchy */
  h1, h2, h3, h4, h5, h6 {
    font-family: 'Poppins', system-ui, -apple-system, sans-serif;
    font-weight: 600;
    line-height: 1.2;
    letter-spacing: -0.025em;
    color: #111827;
  }

  h1 {
    font-size: 2.25rem;
    font-weight: 700;
    letter-spacing: -0.05em;
  }

  h2 {
    font-size: 1.875rem;
    font-weight: 600;
  }

  h3 {
    font-size: 1.5rem;
    font-weight: 600;
  }

  h4 {
    font-size: 1.25rem;
    font-weight: 500;
  }

  h5 {
    font-size: 1.125rem;
    font-weight: 500;
  }

  h6 {
    font-size: 1rem;
    font-weight: 500;
  }

  /* Text elements */
  p {
    margin-bottom: 1rem;
    line-height: 1.7;
  }

  /* Links */
  a {
    color: #4f46e5;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  a:hover {
    color: #3730a3;
  }

  /* Lists */
  ul, ol {
    margin-bottom: 1rem;
    padding-left: 1.5rem;
  }

  li {
    margin-bottom: 0.5rem;
    line-height: 1.6;
  }

  /* Code */
  code {
    font-family: 'JetBrains Mono', 'Fira Code', 'Monaco', 'Cascadia Code', monospace;
    font-size: 0.875em;
    background-color: #f3f4f6;
    padding: 0.125rem 0.25rem;
    border-radius: 0.25rem;
    color: #dc2626;
  }

  pre {
    font-family: 'JetBrains Mono', 'Fira Code', 'Monaco', 'Cascadia Code', monospace;
    background-color: #1f2937;
    color: #f9fafb;
    padding: 1rem;
    border-radius: 0.5rem;
    overflow-x: auto;
    line-height: 1.5;
  }

  pre code {
    background: none;
    padding: 0;
    color: inherit;
  }

  /* Blockquotes */
  blockquote {
    border-left: 4px solid #e5e7eb;
    padding-left: 1rem;
    margin: 1.5rem 0;
    font-style: italic;
    color: #6b7280;
  }

  /* Form elements */
  input, textarea, select {
    font-family: inherit;
    font-size: inherit;
    line-height: inherit;
  }

  button {
    font-family: inherit;
    font-weight: 500;
    letter-spacing: 0.025em;
  }

  /* Strong and emphasis */
  strong, b {
    font-weight: 600;
  }

  em, i {
    font-style: italic;
  }

  /* Abbreviations */
  abbr {
    text-decoration: underline dotted;
    cursor: help;
  }

  /* Horizontal rules */
  hr {
    border: 0;
    border-top: 1px solid #e5e7eb;
    margin: 2rem 0;
  }

  /* Tables */
  table {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 1rem;
  }

  th, td {
    padding: 0.75rem;
    text-align: left;
    border-bottom: 1px solid #e5e7eb;
  }

  th {
    font-weight: 600;
    background-color: #f9fafb;
  }
}

/* Component-specific typography improvements */
@layer components {
  /* Cards */
  .card-title {
    @apply text-lg font-semibold text-gray-900 font-display leading-tight;
  }

  .card-subtitle {
    @apply text-sm font-medium text-gray-600 leading-snug;
  }

  .card-description {
    @apply text-sm text-gray-500 leading-relaxed;
  }

  /* Buttons */
  .btn-primary {
    @apply font-medium text-sm leading-none tracking-wide;
  }

  .btn-secondary {
    @apply font-medium text-sm leading-none tracking-wide;
  }

  /* Form labels */
  .form-label {
    @apply text-sm font-medium text-gray-700 leading-tight;
  }

  .form-help {
    @apply text-xs text-gray-500 leading-normal;
  }

  /* KPI Cards */
  .kpi-value {
    @apply text-2xl font-bold text-gray-900 font-display leading-none;
  }

  .kpi-label {
    @apply text-sm font-medium text-gray-600 leading-tight uppercase tracking-wide;
  }

  .kpi-change {
    @apply text-xs font-semibold leading-none;
  }

  /* Navigation */
  .nav-link {
    @apply font-medium text-sm leading-none;
  }

  .nav-link-active {
    @apply font-semibold text-sm leading-none;
  }

  /* Tables */
  .table-header {
    @apply text-xs font-semibold text-gray-600 uppercase tracking-wider leading-none;
  }

  .table-cell {
    @apply text-sm text-gray-900 leading-normal;
  }

  /* Alerts and notifications */
  .alert-title {
    @apply text-sm font-semibold text-gray-900 leading-tight;
  }

  .alert-description {
    @apply text-sm text-gray-700 leading-relaxed;
  }

  /* Charts and data visualization */
  .chart-title {
    @apply text-lg font-semibold text-gray-900 font-display leading-tight;
  }

  .chart-subtitle {
    @apply text-sm text-gray-600 leading-snug;
  }

  .chart-label {
    @apply text-xs font-medium text-gray-500 leading-none;
  }

  /* Sidebar */
  .sidebar-title {
    @apply text-lg font-bold text-gray-900 font-display leading-tight;
  }

  .sidebar-link {
    @apply text-sm font-medium leading-snug;
  }

  /* Topbar */
  .topbar-title {
    @apply text-lg font-semibold text-gray-900 font-display leading-tight;
  }

  /* Breadcrumbs */
  .breadcrumb-link {
    @apply text-sm font-medium leading-none;
  }

  .breadcrumb-current {
    @apply text-sm font-semibold text-gray-900 leading-none;
  }
}
  .text-balance {
    text-wrap: balance;
  }

  .text-pretty {
    text-wrap: pretty;
  }

  .font-display {
    font-family: 'Poppins', system-ui, -apple-system, sans-serif;
  }

  .font-body {
    font-family: 'Inter', system-ui, -apple-system, sans-serif;
  }

  .font-mono {
    font-family: 'JetBrains Mono', 'Fira Code', monospace;
  }

  /* Reading width utilities */
  .prose-width {
    max-width: 65ch;
  }

  .prose-width-lg {
    max-width: 75ch;
  }

  .prose-width-xl {
    max-width: 85ch;
  }

  /* Text scale utilities */
  .text-scale-sm {
    font-size: clamp(0.875rem, 2.5vw, 1rem);
    line-height: 1.5;
  }

  .text-scale-base {
    font-size: clamp(1rem, 3vw, 1.125rem);
    line-height: 1.6;
  }

  .text-scale-lg {
    font-size: clamp(1.125rem, 3.5vw, 1.25rem);
    line-height: 1.6;
  }

  .text-scale-xl {
    font-size: clamp(1.25rem, 4vw, 1.5rem);
    line-height: 1.5;
  }

  .text-scale-2xl {
    font-size: clamp(1.5rem, 5vw, 2rem);
    line-height: 1.4;
  }

  .text-scale-3xl {
    font-size: clamp(1.875rem, 6vw, 2.5rem);
    line-height: 1.3;
  }

  .text-scale-4xl {
    font-size: clamp(2.25rem, 8vw, 3.5rem);
    line-height: 1.2;
  }

  /* Heading scale utilities */
  .heading-scale-1 {
    font-size: clamp(2rem, 8vw, 4rem);
    line-height: 1.1;
    letter-spacing: -0.05em;
  }

  .heading-scale-2 {
    font-size: clamp(1.5rem, 6vw, 2.5rem);
    line-height: 1.2;
    letter-spacing: -0.04em;
  }

  .heading-scale-3 {
    font-size: clamp(1.25rem, 4vw, 2rem);
    line-height: 1.3;
    letter-spacing: -0.03em;
  }

  .heading-scale-4 {
    font-size: clamp(1.125rem, 3vw, 1.5rem);
    line-height: 1.4;
    letter-spacing: -0.02em;
  }

  /* Color utilities for text */
  .text-primary {
    color: #1f2937;
  }

  .text-secondary {
    color: #6b7280;
  }

  .text-tertiary {
    color: #9ca3af;
  }

  .text-accent {
    color: #4f46e5;
  }

  .text-success {
    color: #059669;
  }

  .text-warning {
    color: #d97706;
  }

  .text-error {
    color: #dc2626;
  }

  /* Gradient text utilities */
  .text-gradient-primary {
    background: linear-gradient(135deg, #4f46e5, #7c3aed);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .text-gradient-secondary {
    background: linear-gradient(135deg, #059669, #0d9488);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
}

/* Print styles */
@media print {
  body {
    font-size: 12pt;
    line-height: 1.4;
    color: #000;
  }

  h1, h2, h3, h4, h5, h6 {
    color: #000;
    page-break-after: avoid;
  }

  .no-print {
    display: none !important;
  }

  a {
    color: #000 !important;
    text-decoration: underline !important;
  }

  .card, .bg-white {
    background: #fff !important;
    box-shadow: none !important;
    border: 1px solid #ccc !important;
  }
}

/* High DPI screens */
@media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi) {
  body {
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }
}

/* Dark mode support (if needed in future) */
@media (prefers-color-scheme: dark) {
  :root {
    --text-primary: #f9fafb;
    --text-secondary: #d1d5db;
    --text-tertiary: #9ca3af;
    --bg-primary: #111827;
    --bg-secondary: #1f2937;
  }
}

/* Custom scrollbar */
::-webkit-scrollbar {
  width: 8px;
  height: 8px;
}

::-webkit-scrollbar-track {
  background: #f1f5f9;
  border-radius: 4px;
}

::-webkit-scrollbar-thumb {
  background: #cbd5e1;
  border-radius: 4px;
}

::-webkit-scrollbar-thumb:hover {
  background: #94a3b8;
}

/* Focus states for accessibility */
@layer base {
  *:focus-visible {
    outline: 2px solid #4f46e5;
    outline-offset: 2px;
  }

  /* High contrast mode support */
  @media (prefers-contrast: high) {
    body {
      color: #000000;
    }

    h1, h2, h3, h4, h5, h6 {
      color: #000000;
    }

    .text-secondary {
      color: #333333;
    }

    .text-tertiary {
      color: #666666;
    }
  }

  /* Reduced motion support */
  @media (prefers-reduced-motion: reduce) {
    html {
      scroll-behavior: auto;
    }

    *, *::before, *::after {
      animation-duration: 0.01ms !important;
      animation-iteration-count: 1 !important;
      transition-duration: 0.01ms !important;
    }
  }
}

/* Tailwind enabled - custom rules follow */
