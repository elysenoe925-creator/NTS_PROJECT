/* Store Selector */
.store-selector {
  display: flex;
  gap: 6px;
  padding: 6px;
  background: linear-gradient(135deg, #f3f4f6 0%, #ede9fe 100%);
  border-radius: 12px;
  flex-wrap: nowrap;
  overflow-x: auto;
  border: 1px solid #e5e7eb;
}

.store-btn {
  position: relative;
  padding: 9px 18px;
  font-size: 13px;
  font-weight: 600;
  color: #6b7280;
  background: transparent;
  border: none;
  border-radius: 10px;
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  white-space: nowrap;
  display: flex;
  align-items: center;
  gap: 6px;
  min-height: 38px;
  letter-spacing: -0.3px;
}

.store-btn:hover:not(:disabled) {
  color: #1e293b;
  background: rgba(255, 255, 255, 0.6);
}

.store-btn.active {
  color: #1e293b;
  background: linear-gradient(135deg, #ffffff 0%, #f9fafb 100%);
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  font-weight: 700;
}

.store-btn:disabled {
  opacity: 0.4;
  cursor: not-allowed;
}

.store-indicator {
  display: inline-block;
  width: 7px;
  height: 7px;
  background: linear-gradient(135deg, #6366f1 0%, #4f46e5 100%);
  border-radius: 50%;
  box-shadow: 0 2px 4px rgba(99, 102, 241, 0.3);
}
.store-label{
  font-family: poppins;
}
/* User Info */
